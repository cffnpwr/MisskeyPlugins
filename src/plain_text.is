### {
  id: "9bcc8629-5a47-fe82-ca09-8e937f817dcb"
  name: "ノートの内容をプレーンテキストで表示するプラグイン"
  version: "2.0.0"
  author: "elysion"
  description: "ノートの内容をプレーンテキストで表示するボタンをノートメニューに追加します。"
}

Plugin:register_note_action("表示：ノートの内容をプレーンテキストで表示" @(note) {
  Mk:dialog("ノート内容", [
    `<plain>`
    if (note.cw != null) note.cw
    note.text
    `</plain>`
  ].join(Str:lf), "info")
})